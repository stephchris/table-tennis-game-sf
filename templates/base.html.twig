<!DOCTYPE html>
<html class="bg-blue-200">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>


<body>
<div class="text-3xl font-bold text-lightblue mt-8">
<ul>
    {# si l'utilisateur est connecté #}
    {% if app.user %}
        <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>

    {% else%}
        <li><a href="{{ path('app_login') }}">Connexion</a></li>
        <li><a href="{{ path('app_register') }}">S'inscrire</a></li>

    {% endif %}
</ul>


        <div class="flex justify-between">
            <nav class="h-screen w-screen text-3xl font-bold text-lightblue">
                <ul class="px-12 pt-20 mr-8">
                    <div class="pb-12">
                        <li><a href="{{ path('homepage') }}">Accueil </a></li>
                    </div>
                    <div class="pb-12">
                        <li><a href="{{ path('app_tournament_index') }}"><i class="fa-solid fa-trophy"></i>  Tournois</a></li>
                    </div>
                    <div class="pb-12">
                        <li>  <a href="{{ path('app_user_index') }}"><i class="fa-solid fa-user-group"></i>Membres</a></li>
                    </div>
                    <div class="pb-12">
                        <li><a href="{{ path('app_user_index') }}"><i class="fa-solid fa-list-ol"></i>  Classement</a></li>
                    </div>
                </ul>





            </nav>

        <main class="px-12">
        {% block body %}

        {% endblock %}
    </main>
        <hr class="h-1 mt-20 mb-8 ml-12 -mr-60 bg-white">
    <footer class="">
        <div class="">
            <p class="text-right text-white pt-4">Table Tennis Game &copy; 2023</p>


        </div>
    </footer>


</body>
</html>
