{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container mt-8 mr-96">
        <h1 class="text-5xl py-16">Login</h1>

        <form action="{{ path('app_login') }}" method="post">
            <label for="username">Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}">
            <br>
            <label for="password">Mot de Passe:</label>
            <input type="password" id="password" name="_password">

            {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <br>
            <button type="submit" class="text-lg bg-blue rounded-full px-8 py-2 h-10 border-2 uppercase text-white">Se connecter</button>
        </form>
    </div>
</div>
    </div>
        {% endblock %}
