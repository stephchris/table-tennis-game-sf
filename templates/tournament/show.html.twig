{% extends 'base.html.twig' %}

{% block title %}Tournament{% endblock %}

{% block body %}
    <h1>Tournament</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournament.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tournament.name }}</td>
            </tr>
            <tr>
                <th>DateStart</th>
                <td>{{ tournament.dateStart ? tournament.dateStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateEnd</th>
                <td>{{ tournament.dateEnd ? tournament.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tournament.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ tournament.type }}</td>
            </tr>
            <tr>
                <th>PlayerNumber</th>
                <td>{{ tournament.playerNumber }}</td>
            </tr>
            <tr>
                <th>TableNumber</th>
                <td>{{ tournament.tableNumber }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ tournament.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tournament_index') }}">back to list</a>

    <a href="{{ path('app_tournament_edit', {'id': tournament.id}) }}">edit</a>

    {{ include('tournament/_delete_form.html.twig') }}
{% endblock %}
