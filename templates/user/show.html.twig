{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-8 mr-96">
    <h1 class="text-5xl py-24 px-12">{{ user.fullName }}</h1>


    <div class="max-w-xl  rounded overflow-hidden shadow-lg py-8 ml-8 bg-white px-12 py-4">

<div class="grid grid-cols-3">
        <img src="{{ asset('uploads/' ~ user.image) }}" alt="{{ user.image }}" class="mx-auto mb-4 w-32 rounded-lg>">
            <div>
                <p>Prénom :</p>
                <p>Nom :</p>
                <p>Genre :</p>
                <p>Date de Naissance :</p>
                <p>Classement :</p>
                <p>Adresse :</p>
                <p>Code Postal :</p>
                <p>Ville :</p>
            </div>

            <div>
                <p>{{ user.firstName }}</p>
                <p>{{ user.lastName }}</p>
                <p>{{ user.gender }}</p>
                <p>{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}</p>
                <p>{{ user.ranking }}</p>
                <p>{{ user.address }}</p>
                <p>{{ user.zipcode }}</p>
                <p>{{ user.city }}</p>
            </div>

        <button>
    <a href="{{ path('app_user_index') }}">Retour à la liste</a>
            </button>
            <button>
    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
            </button>
    {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
    </div>

{% endblock %}
