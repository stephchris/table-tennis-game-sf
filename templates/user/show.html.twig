{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

        <h1 class="text-5xl py-24 px-12">{{ user.fullName }}</h1>

        <div class="card ">



                <div class="flex">
                    <img src="{{ asset('uploads/' ~ user.image) }}" alt="{{ user.image }}" class="h-96 flex-1 object-contain">
                </div>
            <div class="grid grid-cols-2">
                <div>
                    <p>{{ user.fullName }}</p>
                    <p>{{ user.gender }}</p>
                    <p>{{ user.birthDate ? user.birthDate|date('d-m-Y') : '' }}</p>
                    <p>Classement : {{ user.ranking }}</p>
                    <p>{{ user.address }}</p>
                    <p>{{ user.zipcode }}  {{ user.city }}</p>
                </div>
                <div class="flex flex-col mt-8">
                    <button class="button">
                        <a href="{{ path('app_user_index') }}">Retour Ã  la liste</a>
                    </button>
                    <button class="button">
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                    </button>
                </div>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>

{% endblock %}
