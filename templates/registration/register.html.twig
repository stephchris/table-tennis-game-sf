{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="mt-8">
    <h1 class="text-5xl py-16">S'inscrire</h1>
    <div class="flex justify-between">
<div class="form ml-8">

    {{ form_start(userType) }}
        {{ form_row(userType.firstName, {
            label: 'Prénom'
        }) }}
        {{ form_row(userType.lastName, {
            label: 'Nom'
        }) }}
        {{ form_row(userType.gender, {
            label: 'Genre'
        }) }}
        {{ form_row(userType.birthDate, {
            label: 'Date de naissance'
        }) }}
    {{ form_row(userType.address, {
        label: 'rue'
    }) }}
    {{ form_row(userType.zipcode, {
        label: 'Code Postal'
    }) }}
    {{ form_row(userType.city, {
        label: 'Ville'
    }) }}
    {{ form_row(userType.ranking, {
        label: 'Classement'
    }) }}
    {{ form_row(userType.image, {
        label: 'Photo de profil'
    }) }}

        {{ form_row(userType.email) }}
        {{ form_row(userType.plainPassword, {
            label: 'Mot de Passe'
        }) }}

        {{ form_row(userType.agreeTerms) }}

        <button class="button mt-4 ml-64" type="submit">Valider</button>
    {{ form_end(userType) }}
</div>
        <img src="{{ asset('uploads/simon gauzy.jpg') }}" ; alt="Simon Gauzy, français classé mondial"
             class="object-scale-down h-80 rounded row-span-2 mt-36 ml-36 blur-xs">
</div>
</div>
{% endblock %}
