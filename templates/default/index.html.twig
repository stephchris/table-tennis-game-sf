{% extends 'base.html.twig' %}

{% block title %}Table Tennis Game{% endblock %}

{% block body %}

    {#  <div class="bg-cover h-screen w-screen" style="background-image: url('{{ asset('uploads/bg_table_tennis.jpeg') }}');"> #}

    <div class="py-12">
        <div class="pl-16 py-4 mx-4 text-center flex">
            <div class="grid grid-cols-2 pl-48 lg:grid-cols-4 lg:pl-4">


                    <a href="https://www.cjf-upsm.com/"><img src= {{ asset('uploads/logo.jpg') }} ;" alt="logo du club"
                                                             class="hover:-translate-x-3 lg:w-"></a>
                    <div class="tournaments border-blue border-2 rounded-lg py-4 w-48 mx-4">
                        <i class="fa-solid fa-trophy text-blue"></i>
                        <p><a href="{{ path('app_tournament_index') }}">XX Tournois</a></p>

                </div>

                    <div class="members border-blue border-2 rounded-lg py-4 w-48 mx-4">
                        <i class="fa-solid fa-user-group text-blue"></i>
                        <p class="pl-4"><a href="{{ path('app_user_index') }}">XX Membres</a></p>
                    </div>
                    <div class="ranking border-blue border-2 rounded-lg py-4 w-48 mx-4">
                        <i class="fa-solid fa-list-ol text-blue"></i>
                        <p><a>Classement</a></p>
                    </div>

            </div>
        </div>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
    <div class="mt-12">
        <div class="bg-contain bg-no-repeat h-48" style="background-image: url('{{ asset('uploads/calendar.png') }}');">
            <p class="text-right text-3xl font-bold pt-16 pr-44 hover:text-yellow"><a
                        href="{{ path('app_tournament_new') }}">Organiser un nouveau tournoi <i
                            class="fa-sharp fa-solid fa-chevron-right"></i></a></p>
        </div>
    </div>
    {% endif %}
    <div class="py-6">
        <h1 class="text-3xl bg-[#313485] py-2">Prochains tournois</h1>
    </div>
    <div class="grid grid-cols-2">
    <div class="max-w-xl rounded overflow-hidden shadow-lg py-8 ml-8 bg-white px-6 py-4">
        <div class="grid">
            {% if tournamentsp is empty %}
                <p>Aucun tournoi n'a été trouvé.</p>
            {% else %}
                <ul>
                    {% for tournament in tournamentsf %}
                        {% include 'tournament/_card.html.twig' with {'tournament': tournament} only %}
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
    </div>
    <div class="py-6">
        <h1 class="text-3xl bg-[#313485] py-2">Tournois Passés</h1>
    </div>
    <div class="max-w-xl rounded overflow-hidden shadow-lg py-8 ml-8 bg-white px-6 py-4">
        <div class="grid">
            {% if tournamentsp is empty %}
                <p>Aucun tournoi passé n'a été trouvé.</p>
            {% else %}
                <ul>
                    {% for tournament in tournamentsp %}
                        {% include 'tournament/_card.html.twig' with {'tournament': tournament} only %}
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
    <div class="py-6">
        <h1 class="text-3xl bg-[#313485] py-2">Derniers joueurs inscrits</h1>
    </div>
    <div class="h-24">
    </div>
{% endblock %}
